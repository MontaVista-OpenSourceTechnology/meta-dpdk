         /* sort entries after version number */
         config_sort_entries(&config);
@@ -1851,6 +1992,8 @@ EFI_STATUS efi_main(EFI_HANDLE image, EFI_SYSTEM_TABLE *sys_table) {
 out:
         FreePool(loaded_image_path);
